<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_intro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apptravel.Activity.IntroActivity">

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        custom:pager_animation="Accordion"
        custom:pager_animation_span="400"
        custom:auto_cycle="false"
        custom:indicator_visibility="visible"
        android:layout_height="match_parent"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_grey_800"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/custom_indicator"/>
    <com.daimajia.slider.library.Indicators.PagerIndicator
        android:id="@+id/custom_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        custom:selected_color="@color/md_amber_50"
        custom:unselected_color="@color/md_grey_700"
        custom:shape="oval"
        custom:selected_padding_left="10dp"
        custom:selected_padding_right="10dp"
        custom:unselected_padding_left="10dp"
        custom:unselected_padding_right="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        custom:selected_width="8dp"
        custom:selected_height="8dp"
        custom:unselected_width="8dp"
        custom:unselected_height="8dp"
        android:layout_marginBottom="35dp"
        />
    <TextView
        android:id="@+id/tv_skip"
        android:onClick="onSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/md_white_1000"
        android:textSize="18sp"
        android:layout_marginBottom="33dp"
        android:layout_marginLeft="20dp"
        android:text="@string/skip"/>
    <ImageView
        android:id="@+id/im_next"
        android:onClick="onNext"
        android:drawableLeft="@drawable/ic_play_arrow_white_36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="23dp"
        android:layout_marginRight="20dp"/>
    <com.daimajia.slider.library.Indicators.PagerIndicator
        android:id="@+id/custom_indicator2"
        style="@style/AndroidImageSlider_Corner_Oval_Orange"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        />
</RelativeLayout>
