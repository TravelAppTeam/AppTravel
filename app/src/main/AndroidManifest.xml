<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.apptravel">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.IntroActivity"
            android:theme="@style/AppTheme.TranslucentStatut">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.AboutUsActivity"
            android:theme="@style/AppTheme.TranslucentStatut" />
        <activity
            android:name=".Activity.ContentTravelActivity"
            android:label="@string/title_activity_content_travel"
            android:theme="@style/AppTheme.TranslucentStatut" />
        <activity
            android:name=".Activity.LoaddingActivity"
            android:theme="@style/AppTheme.TranslucentStatut"></activity>
    </application>

</manifest>